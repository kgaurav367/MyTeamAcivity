<?xml version="1.0" encoding="UTF-8"?> 

<odoo>

     <!-- tree view --> 



       <record model="ir.ui.view" id="insurance_form_view">

            <field name="name">insurance_policy.form.view</field>

            <field name="model">insurance_policy</field>

            <field name="arch" type="xml">

                <form string="insurance Form">

                    <sheet>

                        <group>
                            <group>

                               <field name="name"/>
                                <field name="noi"/>
                                <field name="age"/>
                               <!--  <field name="activity_category"/> -->
                                <!-- <field name="income_category" attrs="{'invisible':[('activity_category','!=','one')]}"/> -->
                                <!-- <field name="relative_relationship"/> -->
    
                            </group>
                            <group>    
                                <field name="address"/>
                                <field name="reffered"/>
                                <field name="policy_number"/>  
                                
                            </group>   
                            <group> 
                                <field name="premium_amount"/>
                                <field name="company_policy_from"/>
                                <field name="policy_type"/>
                                <field name="premium_term"/>
                            </group>
                            <group>

                                <field name="reminder"/>
                                <field name="policy_from"/>
                                <field name="exp_date"/>
                                <field name="activity"/>
                                
                            </group>                            
                        </group>
                        <notebook>
                            <page string="Internal Notes">   
                                <field name="remarks"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <!-- field name="activity_ids" widget="mail_activity"/> -->
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>

                </form>

            </field>

            </record>  

        

        <!--= window action -->

        <!--

            The following tag is an action definition for a "window action",

            that is an action opening a view or a set of views

        -->

        <record model="ir.ui.view" id="insurance_tree_view">

            <field name="name">insurance_policy.tree.view</field>

            <field name="model">insurance_policy</field>
            <field name="type">tree</field>

            <field name="arch" type="xml">
                <tree string="insurance Form">
                            <field name="name"/>
                            <field name="noi"/>
                            <field name="age"/>
                            <field name="address"/>
                            <field name="reffered"/>
                            <field name="policy_number"/>
                            <field name="activity"/>
                            <field name="premium_amount"/>
                            <field name="company_policy_from"/>
                            <field name="policy_type"/>
                            <field name="premium_term"/>
                            <field name="reminder"/>
                            <field name="exp_date"/>
                            <field name="policy_from"/>
                            <field name="remarks"/>
                </tree>
            </field>
        </record>



        <record model="ir.actions.act_window" id="insurance_list_action">

            <field name="name">insurance_policy Field </field>

            <field name="res_model">insurance_policy</field>

            <field name="view_type">form</field>

            <field name="view_mode">tree,form</field>

            <field name="help" type="html">

                <p class="oe_view_nocontent_create">Create the first insurance here

                </p>

            </field>

        </record>
