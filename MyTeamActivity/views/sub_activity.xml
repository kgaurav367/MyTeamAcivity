<?xml version="1.0" encoding="UTF-8"?> 

<odoo>

     <!-- tree view -->



       <record model="ir.ui.view" id="sub_activity_form_view">

            <field name="name">sub_activity.form.view</field>

            <field name="model">sub_activity</field>

            <field name="arch" type="xml">

                <form string="insurance Form">

                    <sheet>

                        <group>
                        
                           <field name="activity_type_id"/>
                           <field name="sub_activity"/>
                

                        </group>

                    </sheet>

                </form>

            </field>

            </record>  



        

        <!--= window action -->

        <!--

            The following tag is an action definition for a "window action",

            that is an action opening a view or a set of views

        -->

        <record model="ir.ui.view" id="sub_activity_tree_view">

            <field name="name">sub_activity.tree.view</field>

            <field name="model">sub_activity</field>
            <field name="type">tree</field>

            <field name="arch" type="xml">
                <tree string="sub_activity Form">
                    
                        <field name="activity_type_id"/>
                        <field name="sub_activity"/>
                
                    
                </tree>
            </field>
        </record>




        <record model="ir.actions.act_window" id="sub_activity_list_action">

            <field name="name">sub_activity Field </field>

            <field name="res_model">sub_activity</field>

            <field name="view_type">form</field>

            <field name="view_mode">tree,form</field>

            <field name="help" type="html">

                <p class="oe_view_nocontent_create">Create the first insurance here

                </p>

            </field>

        </record>

